# Create deterministic Tessera keys for testing purpose
fixed_tessera_keys=true

node_name_prefix=master
auto_start_containers=true

########################################################################

[[ "$total_nodes" -lt "$signer_nodes" ]] && total_nodes=$signer_nodes



